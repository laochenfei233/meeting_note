platform :macos, '10.14'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try running flutter pub get"
end

# The default name for the application target is 'Runner'.
# The default name for the App Framework is 'FlutterMacOS'.
workspace 'Runner.xcworkspace'
project 'Runner', 'Debug' => :debug, 'Profile' => :release, 'Release' => :release

# Require the podhelper script from Flutter
flutter_podhelper_path = File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
if File.exist?(flutter_podhelper_path)
  load flutter_podhelper_path
else
  puts "Warning: Unable to find podhelper.rb at #{flutter_podhelper_path}"
end

# Workaround for missing podhelper in some CI environments
# Define the function if it's not available
unless respond_to?(:flutter_macos_podfile_setup)
  def flutter_macos_podfile_setup
    # Minimal setup for Flutter macOS plugins
    puts "Using minimal Flutter macOS pod setup"
  end
end

flutter_macos_podfile_setup